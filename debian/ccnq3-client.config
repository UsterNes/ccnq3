#!/bin/sh -e

NAME=ccnq3
ETCDIR=/etc/$NAME
URI_FILE="$ETCDIR/uri"

[ -e "$URI_FILE" ] && exit 0
[ -e "$ETCDIR/host.json" ] && exit 0

# Source debconf library.
. /usr/share/debconf/confmodule

# Ask for URI
db_input critical ccnq3/uri
db_go

# Get the value (it is required) and save it
db_get ccnq3/uri
echo "$RET" > $URI_FILE
