#!/bin/sh
### BEGIN INIT INFO
# Provides:          ccnq3
# Required-Start:    $local_fs couchdb
# Required-Stop:     $local_fs
# X-Start-Before:    opensips freeswitch
# X-Stop-After:      opensips freeswitch
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
### END INIT INFO

# Author: Stephane Alnet <stephane@shimaore.net>

NAME=ccnq3
USER=ccnq3
SCRIPTNAME=/etc/init.d/$NAME
WORKDIR=/opt/$NAME/src

case "$1" in
  start)
    (cd $WORKDIR && su -s /bin/sh -c 'npm start' $USER)
  ;;
  stop)
    (cd $WORKDIR && su -s /bin/sh -c 'npm stop ' $USER)
  ;;
  restart)
    (cd $WORKDIR && su -s /bin/sh -c 'npm stop' $USER)
    (cd $WORKDIR && su -s /bin/sh -c 'npm start' $USER)
  ;;
  *)
    echo "Usage: $SCRIPTNAME {start|stop|restart}" >&2
    exit 1
  ;;
esac

exit 0
