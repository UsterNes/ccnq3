server {
  listen   80;
  server_name  _;

  access_log  /var/log/nginx/localhost.access.log;

  if ($host ~* www\.(.*)) {
    set $host_without_www $1;
    rewrite ^(.*)$ http://$host_without_www$1 permanent;
  }

  # Install the content of /public/ into /var/www/public.
  location /public/ {
    root /var/www/public/;
  }

  # Hidden files
  location ~ /\. {
    deny  all;
  }

  # Example configuration for a node.js application as the default.
  location / {
    proxy_pass http://127.0.0.1:5678;
    proxy_redirect off;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }

  # Access to account-specific database is controlled by the database.
  location ~ ^/(provisioning|cdr)%3A {
    proxy_pass http://localhost:5984;
    proxy_redirect off;
    proxy_buffering off;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }

  error_page   500 502 503 504  /50x.html;
    location = /50x.html {
    root   /var/www/nginx-default;
  }
}
