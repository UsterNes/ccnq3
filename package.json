{
  "name": "ccnq3_main",
  "version": "0.0.1",
  "description": "Web server for CCNQ3",
  "keywords": "",
  "author": { "name": "Stephane Alnet", "email": "stephane@shimaore.net" },
  "config": {
    "file": "/etc/ccnq3/host.json"
  },
  "scripts": {
    "start":  "./npm-apps.coffee start"
  , "stop":   "./npm-apps.coffee stop"
  , "updates": "./npm-apps.coffee install && ./npm-apps.coffee update && ./npm-apps.coffee run-script couchapps"
  , "bootstrap": "./npm-apps.coffee run-script bootstrap"
  , "compact": "./npm-apps.coffee run-script compact"
  , "test": "coffeelint -r . ; find . -name '*.json' -exec jsonlint '{}' ';' >/dev/null"
  },
  "dependencies": {
    "ccnq3_config": ">=0.3.3"
  },
  "devDependencies": {
    "markdown": "*"
  , "coffeecup": "*"
  , "coffee-script": "*"
  , "docco": "*"
  },
  "engines": { "node": ">=0.6.5", "coffee": ">=1.1.3" },

  "private": true,
  "ok": true
}
